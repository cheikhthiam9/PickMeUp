<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/selected_package_id_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Package ID"
            android:inputType="text"
            android:maxLines="1" />


        <TextView
            android:id="@+id/selected_package_description_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Package Description"
            android:inputType="text" />


        <TextView
            android:id="@+id/selected_package_length_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Length"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/selected_width_package_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Width"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/selected_height_package_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/selected_weight_package_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="weight"
            android:inputType="text"
            android:maxLines="1" />


    </LinearLayout>

</androidx.cardview.widget.CardView>