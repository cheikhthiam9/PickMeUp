<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="10dp"
        android:id="@+id/shipping_calculator_title"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        android:text="SHIPPING CALCULATOR" />

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/shipping_calculator_title"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shipping_calculator_title"
        android:orientation="vertical">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Where are you shipping?" />

    <AutoCompleteTextView
        android:hint="Country"
        android:inputType="text"
        android:maxLines="1"
        android:id="@+id/country_shipping_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:inputType="text"
            android:id="@+id/city_shipping_calculator"
            android:maxLines="1" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Zip Code"
            android:id="@+id/zip_code_shipping_calculator"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/package_details_shipping"
            android:gravity="center"
            android:text="Package Details:" />

        <AutoCompleteTextView
            android:id="@+id/length_shipping_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Length"
            android:inputType="text"
            android:maxLines="1" />

        <AutoCompleteTextView
            android:id="@+id/width_shipping_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Width"
            android:inputType="text"
            android:maxLines="1" />

        <AutoCompleteTextView
            android:id="@+id/height_shipping_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Height"
            android:inputType="text"
            android:maxLines="1" />

        <AutoCompleteTextView
            android:id="@+id/weight_shipping_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:inputType="text"
            android:maxLines="1" />

        <Button
            android:id="@+id/submit_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/transparent"
            android:text="Calculate Shipping Cost"/>

        <Button
            android:id="@+id/reset_button_shipping_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"

            android:background="@android:color/transparent"
            android:text="Reset"/>

   </LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>