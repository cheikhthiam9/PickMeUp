<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:text="@string/dashboard_text"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view_dashboard"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/linear_layout_dashboard"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">






<!--                    <Button-->
<!--                        android:id="@+id/pick_up_request_button_dashboard"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:background="@android:color/transparent"-->
<!--                        android:layout_marginStart="12dp"-->
<!--                        android:drawableStart="@drawable/ic_add"-->
<!--                        android:layout_toEndOf="@+id/pre_alert_button_dashboard"-->
<!--                        android:text="CREATE PICK UP REQUEST" />-->




            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profile_pic_dashboard_fragment"
                        android:layout_width="33dp"
                        android:layout_height="47dp"
                        android:paddingLeft="10dp"
                        android:src="@mipmap/ic_launcher_round" />

                    <TextView
                        android:id="@+id/first_name_dashboarddd_fragment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@id/profile_pic_dashboard_fragment"
                        android:paddingLeft="15dp"
                        android:paddingTop="8dp"
                        android:text="First Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="16sp"
                        android:textStyle="bold|italic" />

                    <Button
                        android:id="@+id/edit_profile_button_dashboard"
                        android:layout_width="111dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:background="@android:color/transparent"
                        android:layout_marginStart="299dp"
                        android:layout_marginEnd="1dp"
                        android:drawableStart="@drawable/ic_edit"
                        android:text="Edit Profile"
                        android:textSize="10sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>



            <!--        VIRTUAL ADDRESS CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="3dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/virtual_ad"
                        android:layout_width="match_parent"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content"
                        android:text="Virtual Address" />

                    <TextView
                        android:id="@+id/virtual_ad_hint"
                        android:textStyle="italic"
                        android:textSize="10sp"
                        android:layout_below="@+id/virtual_ad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Personal Shopping Address"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/first_and_last_name_dashboard"
                        android:layout_below="@+id/virtual_ad_hint"
                        android:paddingTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Firt name, Last Name:" />

                    <TextView
                        android:id="@+id/address_1"
                        android:layout_below="@+id/first_and_last_name_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address 1: 1225 S Pecan St" />

                    <TextView
                        android:id="@+id/address_2"
                        android:layout_below="@+id/address_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Address 2: Apt 342" />

                    <TextView
                        android:id="@+id/city_dashboard"
                        android:layout_below="@+id/address_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City: Arlington" />

                    <TextView
                        android:id="@+id/zip_code_dashboard"
                        android:layout_below="@+id/city_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Zip Code: 76010" />


                    <TextView
                        android:id="@+id/coutry_dashboard"
                        android:layout_below="@+id/zip_code_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Country: US" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!--        ACCOUNT OVERVIEW CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/account_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:text="Account Overview" />

                    <TextView
                        android:id="@+id/graph_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/account_overview"
                        android:textSize="19sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"
                        android:text="I will attach a graph here" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!--        RECENT SHIPMENT CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/recent_shipment_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:text="Recent Shipment" />

                    <TextView
                        android:id="@+id/welcome_recent_shipment_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/recent_shipment_dashboard"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:text="Welcome First Name," />

                    <TextView
                        android:id="@+id/no_recent_shipment_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/welcome_recent_shipment_dashboard"
                        android:textSize="17sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="You do not have any shipments." />

<!--                    <Button-->
<!--                        android:id="@+id/create_booking_button_dashboard"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@+id/no_recent_shipment_dashboard"-->
<!--                        android:textSize="10sp"-->
<!--                        android:gravity="center"-->
<!--                        android:textStyle="bold|italic"-->
<!--                        android:background="@android:color/transparent"-->

<!--                        android:text="Create Booking" />-->


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!--SHIPMENT IN PROGRESS CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/shipping_progress_dashboard"
                        android:layout_width="match_parent"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content"
                        android:text="Shipment In Progress" />

                    <TextView
                        android:id="@+id/shipping_progress_message"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:layout_below="@+id/shipping_progress_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="These are your shipments that are saved and waiting for finalization, being processed by our staff or are ready for you to ship." />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!--        PENDING INFO CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pending_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:text="Pending Information Request" />

                    <TextView
                        android:id="@+id/pending_info_message"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:layout_below="@+id/pending_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="These are packages that you've requested information about which are in-progress." />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!--        PROBLEM ITEM CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/problem_item_dashboard"
                        android:layout_width="match_parent"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:layout_height="wrap_content"
                        android:text="Problem Items" />


                    <TextView
                        android:id="@+id/problem_item_message"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:layout_below="@+id/problem_item_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="These are items that are either prohibited from being shipped due to regulatory restrictions, or which have been found by our staff to have been damaged." />



                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <!--        NEWS FEED CARD VIEW USING RELATIVE LAYOUT-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_margin="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/news_feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:paddingTop="10dp"
                        android:text="News Feed" />

                    <TextView
                        android:id="@+id/news_feed_hint"
                        android:textStyle="italic"
                        android:textSize="13sp"
                        android:layout_below="@+id/news_feed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:text="Latest news and alerts" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
