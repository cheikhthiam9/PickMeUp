<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:background="@color/colorPrimary"
android:layout_height="match_parent"
android:orientation="vertical">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="22sp"
    android:padding="10dp"
    android:gravity="center"
    android:textColor="@android:color/white"
    android:textStyle="bold"
    android:text="Create Request"/>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll_view_pick_up_request">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/linear_layout_pick_up_req">

        <!--SENDER INFORMATION CARD VIEW USING RELATIVE LAYOUT-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sender_info_pick_up"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Sender Information" />



                <AutoCompleteTextView
                    android:id="@+id/sender_name_pickup"
                    android:hint="Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <AutoCompleteTextView
                    android:id="@+id/sender_phone_pickup"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <AutoCompleteTextView
                    android:id="@+id/sender_email_pickup"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/sender_street_address_pickup"
                    android:hint="Street Address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/sender_city_pickup"
                    android:hint="City"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/sender_zipcode_pickup"
                    android:hint="Zip Code"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/sender_state_pickup"
                    android:hint="State"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/sender_country_pickup"
                    android:hint="Country"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Address"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--RECEIVER INFORMATION  CARD VIEW USING RELATIVE LAYOUT-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/receiver_info_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:text="Receiver Information" />


                <AutoCompleteTextView
                    android:id="@+id/receiver_name_pickup"
                    android:hint="Name"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <AutoCompleteTextView
                    android:id="@+id/receiver_phone_pickup"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />


                <AutoCompleteTextView
                    android:id="@+id/receiver_email_pickup"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/receiver_street_address_pickup"
                    android:hint="Street Address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/receiver_city_pickup"
                    android:hint="City"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/receiver_zipcode_pickup"
                    android:hint="Zip Code"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/receiver_state_pickup"
                    android:hint="State"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/receiver_country_pickup"
                    android:hint="Country"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Address"
                    />



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--PRODUCT INFORMATION CARD VIEW USING RELATIVE LAYOUT-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/product_info_pickup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:text="Product Information" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <!--SHIPMENT INFORMATION CARD VIEW USING RELATIVE LAYOUT-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >



                <TextView
                    android:id="@+id/shipment_info_pickup"
                    android:layout_width="match_parent"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:layout_height="wrap_content"
                    android:text="Shipment Information" />


                <AutoCompleteTextView
                    android:id="@+id/scale_shipment_pickup"
                    android:hint="Scale"
                    android:layout_below="@+id/shipment_info_pickup"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <AutoCompleteTextView
                    android:id="@+id/length_shipment_pickup"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scale_shipment_pickup"
                    android:hint="Length"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/width_shipment_pickup"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scale_shipment_pickup"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="149dp"
                    android:hint="Width"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/height_shipment_pickup"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scale_shipment_pickup"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="2dp"
                    android:hint="Height"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/volume_weight_shipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/length_shipment_pickup"
                    android:layout_marginTop="0dp"
                    android:hint="Volume Weight (KG)"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/total_weight_shipment"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/length_shipment_pickup"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="73dp"
                    android:layout_marginTop="-2dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@+id/volume_weight_shipment"
                    android:hint="Total Weight (KG) *"
                    android:inputType="text"
                    android:maxLines="1" />


                <AutoCompleteTextView
                    android:id="@+id/shipment_payer_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/volume_weight_shipment"
                    android:hint="Shipment Payer"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/shipment_method_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/volume_weight_shipment"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="142dp"
                    android:hint="Shipping Mode"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/shipment_type_pickup"
                    android:layout_width="133dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/volume_weight_shipment"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="2dp"
                    android:hint="Shipping Type"
                    android:inputType="text"
                    android:maxLines="1" />


                <AutoCompleteTextView
                    android:id="@+id/reference_number_pickup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shipment_payer_pickup"
                    android:layout_marginTop="0dp"
                    android:hint="Reference Number"
                    android:inputType="text"
                    android:maxLines="1" />

                <AutoCompleteTextView
                    android:id="@+id/cod_amount_pickup"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shipment_payer_pickup"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="53dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginEnd="4dp"
                    android:layout_toEndOf="@+id/volume_weight_shipment"
                    android:hint="COD AMOUNT (XOF)"
                    android:inputType="text"
                    android:maxLines="1" />





            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <Button
                    android:id="@+id/submit_request_button"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Submit Request"/>

                <Button
                    android:id="@+id/reset_request"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/submit_request_button"
                    android:text="Reset"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
</LinearLayout>